{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "diplom-rs",
  "version": "0.1.0",
  "identifier": "com.diplom-rs.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Программа по автоматизации работы педагога",
        "width": 800,
        "height": 600,
        "minWidth": 1200,
        "minHeight": 600
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": false,
        "scope": []
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "users/**/*",
      "tests/**/*",
      "games/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
